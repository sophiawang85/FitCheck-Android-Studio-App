<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.Fit_Check.ui.home.HomeFragment"
        android:label="My Daily Calories"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_create_new_shopping_group"
            app:destination="@id/navigation_shopping_group_detail" />

        <action
            android:id="@+id/action_edit_shopping_list"
            app:destination="@id/navigation_shopping_list">
        <!--<argument
            android:name="selectedDate"
