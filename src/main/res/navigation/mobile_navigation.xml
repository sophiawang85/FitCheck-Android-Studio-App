    </action>

</fragment>

<fragment
    android:id="@+id/navigation_shopping_group_detail"
    android:name="com.example.Fit_Check.ui.date.DateFragment"
    android:label="Date:"
    tools:layout="@layout/fragment_date" />

<fragment
    android:id="@+id/navigation_shopping_list"
    android:name="com.example.Fit_Check.ui.foodlist.FoodListFragment"
    android:label="Today's Calories"
    tools:layout="@layout/fragment_foods_list" >

    <argument
        android:name="selectedDate"
        app:argType="com.example.Fit_Check.model.DateWithFoodList"
        app:nullable="false"/>

    <action
        android:id="@+id/action_add_food_to_date"
        app:destination="@id/navigation_food_detail" />
