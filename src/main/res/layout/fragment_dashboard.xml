<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Fit_Check.ui.dashboard.DashboardFragment">

    <TextView
        android:id="@+id/textViewFoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Food:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"/>

    <MultiAutoCompleteTextView
        android:id="@+id/multiAutoCompleteTextViewFoodName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Select items"
        android:inputType="textMultiLine"
        android:completionThreshold="1"
        app:layout_constraintStart_toEndOf="@+id/textViewFoodName"
        app:layout_constraintTop_toTopOf="@+id/textViewFoodName"
        app:layout_constraintBottom_toBottomOf="@+id/textViewFoodName"
        app:layout_constraintEnd_toStartOf="@+id/buttonFoodNameQuery"
        app:layout_constraintHorizontal_bias="0.5"/>

    <Button
        android:id="@+id/buttonFoodNameQuery"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:padding="1dp"
        android:text="Query"
        android:textSize="8dp"
        app:layout_constraintStart_toEndOf="@+id/multiAutoCompleteTextViewFoodName"
        app:layout_constraintTop_toTopOf="@+id/multiAutoCompleteTextViewFoodName"
        app:layout_constraintBottom_toBottomOf="@+id/multiAutoCompleteTextViewFoodName"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewFoodType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Food Type:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFoodName"
        app:layout_constraintVertical_bias="0.5"/>

    <MultiAutoCompleteTextView
        android:id="@+id/multiAutoCompleteTextViewFoodType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Select items"
        android:inputType="textMultiLine"
        android:completionThreshold="1"
        app:layout_constraintStart_toEndOf="@+id/textViewFoodType"
        app:layout_constraintTop_toTopOf="@+id/textViewFoodType"
        app:layout_constraintBottom_toBottomOf="@+id/textViewFoodType"
        app:layout_constraintEnd_toStartOf="@+id/buttonFoodTypeQuery"
        app:layout_constraintHorizontal_bias="0.5"/>

    <Button
        android:id="@+id/buttonFoodTypeQuery"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:padding="1dp"
        android:text="Query"
        android:textSize="8dp"
        app:layout_constraintStart_toEndOf="@+id/multiAutoCompleteTextViewFoodType"
        app:layout_constraintTop_toTopOf="@+id/multiAutoCompleteTextViewFoodType"
        app:layout_constraintBottom_toBottomOf="@+id/multiAutoCompleteTextViewFoodType"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/textViewPieChartLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="Food Type Chart:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFoodType" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewPieChartLabel" />

    <ListView
        android:id="@+id/listViewaddcal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pieChart"/>

</androidx.constraintlayout.widget.ConstraintLayout>